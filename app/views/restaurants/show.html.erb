<div class="container text-center">

<h1> <%= @restaurant.name %></h1>
<ul class="list-group">
<li class="list-group-item"><strong>Addresse :</strong> <%= @restaurant.address %></li>
<li class="list-group-item"><strong>Phone number :</strong> <%= @restaurant.phone_number %></li>
<li class="list-group-item"><strong>Cat√©gorie :</strong> <%= @restaurant.category %></li>
</ul>
<h2 class="mt-3 mb-3">Reviews</h2>
<ul class="list-group">
<% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<%= link_to "Back to restaurants list", restaurants_path, class: "btn btn-primary" %>
<%= link_to "Edit restaurant", edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "Delete restaurant", restaurant_path(@restaurant),
  method: :delete,
  data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
</div>
